<div class="panel panel-default">
    <div class="panel-heading">
        <span><i class="fa fa-bolt" style="color: #ffb400"></i> $<%= @foodtruck.price %></span>
        <span class="pull-right">Per Day</span>
    </div>
    <div class="panel-body">
        <%= form_for([@foodtruck, @foodtruck.bookings.new]) do |f| %>
            <div class="row">
                <div class="col-md-6">
                    <label>Rent start date</label>
                    <%= f.text_field :start_date, readonly: true, placeholder: "Start Date", class: "form-control datepicker" %>
                </div>
                <div class="col-md-6">
                    <label>Rent end date</label>
                    <%= f.text_field :end_date, readonly: true, placeholder: "End Date", class: "form-control datepicker", disabled: true %>
                </div>
            </div>
            <h4 class="message-alert text-center"><span id="message"></span></h4>
            <div id="preview" style="display: none;">
                <table class="booking-table">
                    <tbody>
                        <tr>
                            <td>Price</td>
                            <td class="text-right">$<%= @foodtruck.price %></td>
                        </tr>
                        <tr>
                            <td>Day (s)</td>
                            <td class="text-right">x <span id="booking_days"></span></td>
                        </tr>
                        <tr>
                            <td class="total">Price</td>
                            <td class="text-right">$<span id="booking_total"></span></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <br />
            <%= f.submit "Book Now", id: "btn_book", class: "btn btn-normal btn-block", disabled: true %>
        <% end %>
    </div>
</div>

