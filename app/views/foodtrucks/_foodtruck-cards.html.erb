<%= button_to "New Foodtruck", new_foodtruck_path(@foodtrucks), :method => :get, class: "btn" %>
<div class="card-container">
  <div class="holder" data-isotope='{ "itemSelector": ".card", "layoutMode": "fitRows" }'>
    <% @foodtrucks.each do |foodtruck| %>
    <%= link_to foodtruck_path(foodtruck) do %>
    <div class="card" style="width: 18rem;">
      <%= cl_image_tag foodtruck.photo.key, :class => "img-card" %>
      <div class="card-body">
        <h5 class="card-title"> <%= foodtruck.name %></h5>
        <p class="card-food-type"><%= foodtruck.food_type %></p>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>